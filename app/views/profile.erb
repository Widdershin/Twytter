<div class="container">
<h1>Profile of: <%= @username %></h1>

  <h2>Twyts:</h2>
  <% @twytlist.each do |twyt| %>
    Username: <%= @username %><br>
    Message: <%=twyt.message%><br><br>
  <% end %>

  <h2>Followers:</h2>
  <% if @followed_by != nil %>
    <% @followed_by.each do |follower| %>
      <%= follower.username %></br>
    <% end %>
  <% end %>

 <h2>Following:</h2>
 <% if @follows_users != nil %>
  <% @follows_users.each do |followed_user| %>
    <%= followed_user.username %></br>
  <% end %>
 <% end %>

</div>



